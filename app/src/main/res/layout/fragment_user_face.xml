    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eyeblink.MainActivity">

    <com.eyeblink.camera.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.eyeblink.camera.GraphicOverlay
            android:id="@+id/faceOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.eyeblink.camera.CameraSourcePreview>

</FrameLayout>
