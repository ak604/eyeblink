<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eyeblink.MainActivity">


  <fragment class="com.eyeblink.cartoon.CartoonFace"
      android:id="@+id/faceleft"
      android:layout_width="0dp"
      android:layout_height="300dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/faceright"
      tools:layout_editor_absoluteY="0dp" />

    <fragment class="com.eyeblink.cartoon.CartoonFace"
        android:id="@+id/faceright"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/faceleft"
        tools:layout_editor_absoluteY="0dp" />


</android.support.constraint.ConstraintLayout>





